import java.util.Scanner;

public class GuessTheWord {

//	private Scanner sc;
	Scanner sc=new Scanner(System.in);
	boolean play=true;
	public void start() {
		// TODO Auto-generated method stub
	    Words randomWord=new Words();
		do {
			
			showWord(randomWord);
			getInput(randomWord);
			checkInput(randomWord);
			
		}while(play);
	}


	 void showWord(Words randomWord) {
		System.out.println(randomWord);
		
	}

	 void getInput(Words randomWord) {
		System.out.println("Enter a letter to guess the word");
		String userGuess=sc.nextLine();
		
//		char letter;
		
		randomWord.guess(userGuess.charAt(0));		
	}
	 void checkInput(Words randomWord) {
		
		if(randomWord.isGuessedRight()) {
			System.out.println("Congrats, you won!");
			System.out.println("The word is:" + randomWord );
			play=false;
		}
	}


	public void end() {
		sc.close();
		
	}

}
